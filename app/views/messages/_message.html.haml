.message__Group{data: {message: {id: message.id}}}
  .messageInfo
    .messageInfo__Name
      = message.user.name
    .messageInfo__Date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messageContent
    - if message.content.present?
      %p.message__Text
        = message.content
    = image_tag message.image.url, class: 'message__image' if message.image.present?